    <div id="edit-blog">
      <h2><a href="/blog/<%= @id %>"><%= @title %></a></h2>
      <%= form_for :post, :url => "/blog/#{@id}" do |f| %>
          <% unless @error.nil? %>
            <script type="text/javascript">alert("<%= @error %>");</script>
          <% end %>
          <p>
            Title: <input id="post_title" name="post[title]" size="80" type="text" value="<%= @title %>" /><br/>
            <br/>
            Blog:
            <textarea cols="62" id="post_text" name="post[text]" rows="50"><%= @text %></textarea><br/>
            <input name="commit" type="submit" value="Submit Edit" />
          </p>
      <% end %>
    </div>

  </div>

