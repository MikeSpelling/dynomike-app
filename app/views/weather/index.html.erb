<div id="container">

  <div id="header">
    <h1><a href="/">Weather in <%= @location %></a></h1>
  </div>

  <div id="rightbar">
    <h2>Conditions</h2>

    <p><%= @weatherDesc %></p>
    <br/>
    <img src="<%= @weatherImgSrc %>" alt="<%= @weatherDesc %>"/>
  </div>

  <div id="content">
    <p>Your IP is <%= @ip %> - this gives an approximate location of <%= @location %> from <a href="free.worldweatheronline.com">free.worldweatheronline.com</a></p>

    <p>The weather in this area is:<br/>
      <br/>
      Current Temperature: <%= @temp %>°C<br/>
      Max Temperature: <%= @maxTemp %>°C<br/>
      Min Temperature: <%= @minTemp %>°C<br/>
      <br/>
      Wind Speed: <%= @windSpeed %>MPH<br/>
      Wind Direction: <%= @windDirection %><br/>
      <br/>
      Cloud Cover: <%= @cloudCover %><br/>
      Precipitation: <%= @precipitation %>mm</p>
  </div>

  <div id="footer">

    <div id="footer-right">
      <a href="https://www.webfaction.com/">
        <img src="https://www.webfaction.com/images/webfaction-logo.png" alt="Webfaction logo" width="160" height="40"/>
      </a>
    </div>
    <div class="g-plusone" data-width="450"></div>
    <div class="fb-like" data-href="http://dynomike.co.uk" data-send="false" data-width="450" data-show-faces="false"></div>

  </div>
</div>

